<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd" updateCheck="false" name="ECacheDatabase">
	<diskStore path="java.io.tmpdir/ehcachedatabase" />
	<sizeOfPolicy maxDepth="10000" maxDepthExceededBehavior="continue" />
	<defaultCache eternal="true" overflowToDisk="false" diskPersistent="false" timeToIdleSeconds="0" timeToLiveSeconds="0" />

	<!-- FWK -->
	<cache name="authorizations" maxEntriesLocalHeap="1"></cache>

	<!-- SAAS -->
	<cache name="nodes" maxEntriesLocalHeap="1" logging="true" statistics="true"></cache>
	<cache name="node-parameters" maxEntriesLocalHeap="100"></cache>
	<cache name="services" maxEntriesLocalHeap="1"></cache>
	<cache name="ldap" maxEntriesLocalHeap="1"></cache>
	<cache name="ldap-user-repository" maxEntriesLocalHeap="100"></cache>
	<cache name="container-types" maxEntriesLocalHeap="1"></cache>
	<cache name="customers" maxEntriesLocalHeap="10000"></cache>
	<cache name="curl-tokens" maxEntriesLocalHeap="100" timeToLiveSeconds="1200" eternal="false"></cache>
	<cache name="iam-node-configuration" maxEntriesLocalHeap="1"></cache>
	<cache name="subscription-parameters" maxEntriesLocalHeap="1000"></cache>

</ehcache>